@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}

<h4><u>Send Your Query</u></h4>
 @using GPSTrackingWebApp
                @{
                    mygpsEntities2 dtss = new mygpsEntities2();
                    var kk = dtss.logins.ToList();
                    foreach (login sc in kk)
                    {
                        if (sc.email.Equals(Session["email"]))
                        {
                         

         <form role="form" method="post" action="/AdminPanel/ContactUs">
           
                <div class="form-group">
            <div class="col-sm-8">
                <input type="hidden" value="@sc.sno"  name="sno" class="form-control">
            </div>
        </div>

                <br />
              <div class="form-group">
              
              <input type="hidden" class="form-control" ID="TextBox1" value="@sc.email" name="TextBox1" style="width:60%; height:auto;" readonly>
            </div>

               <div class="form-group">
                    <input type="hidden" class="form-control" ID="TextBox2" value="gpstracking96@gmail.com" name="TextBox2" style="width:60%; height:auto;" required>
            </div>
            
 
                         <div class="form-group">
              <label for="subject"><span class="glyphicon glyphicon-eye-open"></span> Subject</label><br />
              <input type="text" class="form-control" ID="TextBox3"  name="TextBox3" style="width:60%; height:auto;" required>
            </div>


                     <div class="form-group">
              <label for="message"><span class="glyphicon glyphicon-eye-open"></span> Enter Your Message</label>
              <textarea class="form-control" ID="TextBox4" name="TextBox4" style="width:60%; height:100px;" required></textarea>
            </div>

 
         <button type="submit" class="btn btn-danger btn-block" style="width:60%;"><span class="glyphicon glyphicon-off" ></span> Send Mail</button>
          </form>}
                    }}
 
<br /><br />


<font color="green" style="margin:20px; margin-left:40px;">
                            @if (ViewBag.Message != null)
                            {
                                @ViewBag.Message
                            }
                        </font>